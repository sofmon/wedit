{
    "builder": {
        "templateFolder": "./template",
        "publicFolder": "./public",
        "templateHtmlFile": "index.html",
        "pageHtmlFile": "index.html",
        "pageJsonFile": "index.json",
        "rootJsonFile": "root.json",
        "rootKeyPrefix": "!"
    },
    "renderer": {
        "editAttribute": "wedit",
        "repeatAttribute": "wedit-repeat",
        "keepAttribute": false
    },
    "service": {
        "host": "localhost",
        "port": 5000,
        "openBrowser": true,
        "shellCommands": {
            "{ctl}+r": "git reset --hard origin/develop && git pull",
            "{ctl}+p": "git add . && git commit -m '{publish}' && git push"
        }
    }
}